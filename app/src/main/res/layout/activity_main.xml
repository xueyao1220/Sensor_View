<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id ="@+id/bg"
    android:keepScreenOn="true"
    tools:context="com.example.yxue.myapplication.MainActivity"
    android:orientation ="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/Graph"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation ="horizontal"
        android:layout_weight="15">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:background="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="85"
        android:orientation="vertical"
        android:background="@color/black"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/bConnect"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="Connect"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bDisconnect"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="Disconnect"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ToggleButton
            android:id="@+id/tbStream"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:checked="false"
            android:textColor="@color/white"
            android:textOff="Stop Stream"
            android:textOn="Start Stream" />

        <ToggleButton
            android:id="@+id/tbScroll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:textColor="@color/white"
            android:textOff="Auto Scroll X"
            android:textOn="Auto Scroll X" />

        <ToggleButton
            android:id="@+id/tbLock"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:checked="true"
            android:textColor="@color/white"
            android:textOff="Lock Xaxis"
            android:textOn="Lock Xaxis" />

        <LinearLayout
            android:id="@+id/LLX"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/bXminus"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/bXplus"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
